<div id="<%= dom_id product %>">


  <p>
    <h1><%= product.name %></h1>
  </p>

    <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

    <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price.fdiv(100)) %>
  </p>

  <p>
    <strong>Sku:</strong>
    <%= product.sku %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

</div>
